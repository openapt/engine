R2PM_BEGIN

R2PM_GIT "https://github.com/radare/radare2-extras"
R2PM_DESC "[RCore] yara3 plugin for radare2"

R2PM_INSTALL() {
	cd yara/yara3
	./configure --prefix=/usr || R2PM_FAIL "Configure"
	make || R2PM_FAIL "Build"
	make install || R2PM_FAIL "Install"
}

R2PM_UNINSTALL() {
	make uninstall
}

R2PM_END
